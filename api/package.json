{
  "name": "ftt-api",
  "version": "0.1.0",
  "description": "API backend du projet ft_transcendence",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && node -e \"fs=require('fs');fs.mkdirSync('dist/db',{recursive:true});fs.copyFileSync('src/db/schema.sql','dist/db/schema.sql')\" && node dist/db/migrate.js",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "fastify": "^4.29.1",
    "@fastify/cors": "^8.5.0",
    "@fastify/helmet": "^11.1.1",
    "@fastify/websocket": "^8.3.0",
    "@fastify/rate-limit": "^8.0.3",
    "@fastify/jwt": "^7.2.0",
    "@fastify/cookie": "^9.3.0",
    "@fastify/multipart": "^8.0.0",
    "@fastify/static": "^7.0.0",
    "argon2": "^0.40.1",
    "better-sqlite3": "^9.4.0",
    "pino": "^9.3.2",
    "zod": "^3.23.8",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3"
  },
  "devDependencies": {
    "@types/node": "^20.14.11",
    "@types/better-sqlite3": "^7.6.8",
    "@types/qrcode": "^1.5.5",
    "@types/speakeasy": "^2.0.10",
    "tsx": "^4.15.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18"
  },
